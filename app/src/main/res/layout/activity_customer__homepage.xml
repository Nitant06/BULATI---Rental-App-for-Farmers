<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_Homepage"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textColor="#2980b9"
            android:textStyle="bold"
            tools:text="@string/availableTools" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bar"
                android:drawableRight="@drawable/search_icon"
                android:ems="10"
                android:hint="Search Here"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button4"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Advance Booking"
                android:textSize="15sp"
                android:background="@drawable/custom_button3"/>

        </LinearLayout>

        <ListView
            android:id="@+id/availableToolList"
            android:layout_width="match_parent"
            android:layout_height="335dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/checkStatusBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/custom_button3"
        android:backgroundTint="#2C7744"
        android:text="Check Order Status"
        android:textColor="#FFFFFF"

        android:textSize="24sp" />

</LinearLayout>