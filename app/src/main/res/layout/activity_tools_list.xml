<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToolsListPage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00C9FF">

        <TextView
            android:id="@+id/Msg"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/sellerToolsList"
            android:textAlignment="viewStart"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addToolBtn"
            android:layout_width="61dp"
            android:layout_height="45dp"
            android:text="+"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:background="#92FE9D"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="@string/addTool"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="250dp"
        android:textSize="20sp"
        android:textColor="#8E0E00"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ListView
            android:id="@+id/toolsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>